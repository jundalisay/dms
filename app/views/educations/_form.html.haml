= simple_form_for @education do |f|
  - if @education.errors.any?
    #error_explanation
      %h2= "#{pluralize(@education.errors.count, "error")} prohibited this education from being saved:"
      %ul
        - @education.errors.full_messages.each do |msg|
          %li= msg

  = f.input :school_name
  = f.input :address
  = f.input :course_name
  = f.input :from_date
  = f.input  :to_date
  = f.input  :school_logo


  .actions
    = f.submit 'Save'
